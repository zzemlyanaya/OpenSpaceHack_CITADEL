<resources>
    <!-- App theme -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorError">@color/color_error</item>
        <item name="colorOnError">@color/color_error</item>
        <item name="colorAccent">@color/accent_blue</item>
        <item name="colorPrimary">@color/accent_blue</item>
        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@color/accent_blue</item>

        <item name="android:statusBarColor">@color/app_background</item>
        <item name="rippleColor">@color/blue_light</item>

        <item name="materialButtonStyle">@style/ButtonStyle</item>
        <item name="textInputStyle">@style/TILStyle</item>

        <item name="fontFamily">monospace</item>
    </style>


    <!-- some styles -->
    <style name="roundedImageViewOval" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="roundedImageViewSquare" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">10dp</item>
    </style>
    <style name="roundedImageViewProjects" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">24dp</item>
    </style>

    <style name="TILStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="hintTextColor">@color/text_hint</item>
        <item name="boxCornerRadiusBottomStart">10dp</item>
        <item name="boxCornerRadiusBottomEnd">10dp</item>
        <item name="boxCornerRadiusTopStart">10dp</item>
        <item name="boxCornerRadiusTopEnd">10dp</item>
        <item name="android:textColorHighlight">@color/blue_light</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">17sp</item>
    </style>

    <style name="ButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="backgroundColor">@color/button_background</item>
        <item name="android:textColor">@color/white</item>
        <item name="cornerRadius">10dp</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Small</item>
        <item name="elevation">0dp</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="tab_text" parent="@style/TextAppearance.AppCompat.Small">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="ChipTabLayout" parent="Widget.MaterialComponents.TabLayout">
        <item name="tabBackground">@drawable/tab_background</item>
        <item name="tabTextAppearance">@style/tab_text</item>
        <item name="tabRippleColor">@android:color/transparent</item>

        <item name="tabTextColor">@color/black</item>
        <item name="tabSelectedTextColor">@color/white</item>
    </style>

    <style name="SpinnerItemStyle" parent="Widget.AppCompat.TextView.SpinnerItem">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textAlignment">textEnd</item>
    </style>

    <style name="SpinnerDropDownItemStyle" parent="Widget.AppCompat.DropDownItem.Spinner">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textAlignment">textEnd</item>
    </style>



</resources>