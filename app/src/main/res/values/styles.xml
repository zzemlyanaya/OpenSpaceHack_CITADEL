<resources>
    <!-- Base App theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.NoActionBar">
        <item name="rippleColor">@color/text_light</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:statusBarColor">@color/app_background</item>
        <item name="colorError">@color/color_error</item>
        <item name="colorOnError">@color/color_error</item>
        <item name="textInputStyle">@style/TILStyle</item>
        <item name="materialButtonStyle">@style/Widget.MaterialComponents.Button.Style</item>
        <item name="snackbarStyle">@style/Widget.MaterialComponents.Snackbar.Style</item>
    </style>

    <!-- LoginActivity theme. -->
    <style name="AppTheme.Login">
        <item name="colorPrimary">@color/accent_red</item>
        <item name="colorOnSurface">@color/white</item>
        <item name="buttonStyle">@style/ButtonStyle</item>
    </style>

    <!-- MainActivity theme. -->
    <style name="AppTheme.Main">
        <item name="colorPrimary">@color/accent_red</item>
        <item name="colorAccent">@color/accent_red</item>
        <item name="colorOnSurface">@color/icon_grey</item>
        <item name="bottomNavigationStyle">@style/BottomNavStyle</item>
        <item name="colorSurface">@color/border_light</item>
        <item name="android:spinnerItemStyle">@style/SpinnerItemStyle</item>
        <item name="spinnerDropDownItemStyle">@style/SpinnerDropDownItemStyle</item>
        <item name="chipStyle">@style/ChipStyle</item>
    </style>

    <!-- some styles -->

    <style name="Widget.MaterialComponents.Snackbar.Style">
        <item name="android:backgroundTint">@color/text_dark</item>
        <item name="android:alpha">1.0</item>
    </style>

    <style name="Widget.MaterialComponents.Button.Style">
        <item name="android:textColor">@color/white</item>
        <item name="iconTint">@color/white</item>
    </style>


    <style name="roundedImageViewOval" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="roundedImageViewSquare" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">10dp</item>
    </style>
    <style name="roundedImageViewProjects" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">24dp</item>
    </style>

    <style name="TILStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="hintTextColor">@color/text_dark</item>
        <item name="boxCornerRadiusBottomStart">44dp</item>
        <item name="boxCornerRadiusBottomEnd">44dp</item>
        <item name="boxCornerRadiusTopStart">44dp</item>
        <item name="boxCornerRadiusTopEnd">44dp</item>
        <item name="android:textColorHighlight">@color/ripple_red</item>
    </style>

    <style name="BottomNavStyle" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="backgroundColor">@color/bottom_nav_background</item>
    </style>

    <style name="ButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="backgroundColor">@color/button_background</item>
        <item name="android:textColor">@color/text_light</item>
        <item name="iconTint">@color/white</item>
        <item name="cornerRadius">48dp</item>
    </style>

    <style name="tab_text" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Small</item>
        <item name="android:textSize">16sp</item>
        <item name="tabTextColor">@color/white</item>
        <item name="tabSelectedTextColor">@color/white</item>
    </style>

    <style name="ChipTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@android:color/transparent</item>
        <item name="tabBackground">@drawable/tab_background</item>
        <item name="tabSelectedTextColor">@color/accent_red</item>
        <item name="tabTextAppearance">@style/tab_text</item>
        <item name="tabRippleColor">@android:color/transparent</item>
    </style>

    <style name="SpinnerItemStyle" parent="Widget.AppCompat.TextView.SpinnerItem">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_light</item>
        <item name="android:textAlignment">textEnd</item>
    </style>

    <style name="SpinnerDropDownItemStyle" parent="Widget.AppCompat.DropDownItem.Spinner">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_light</item>
        <item name="android:textAlignment">textEnd</item>
    </style>

    <style name="TILWhite" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="iconPadding">8dp</item>
        <item name="hintTextColor">@color/black</item>
        <item name="android:textColor">@color/black</item>
        <item name="boxCornerRadiusBottomStart">12dp</item>
        <item name="boxCornerRadiusBottomEnd">12dp</item>
        <item name="boxCornerRadiusTopStart">12dp</item>
        <item name="boxCornerRadiusTopEnd">12dp</item>
        <item name="android:textColorHighlight">@color/ripple_red</item>
        <item name="strokeWidth">0dp</item>
    </style>

    <style name="ChipStyle" parent="Widget.MaterialComponents.Chip.Action">
        <item name="android:textColor">@color/white</item>
        <item name="chipBackgroundColor">@color/accent_red</item>
        <item name="chipSpacingHorizontal">6dp</item>
        <item name="android:textAppearance">@style/ChipTextAppearance</item>
    </style>

    <style name="ChipTextAppearance" parent="TextAppearance.MaterialComponents.Chip">
    </style>

</resources>